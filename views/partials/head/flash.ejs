<div class="container">
    <% if (info && info.length > 0) { %>
        <div class="alert alert-info" role="alert">
            <%= info %>
        </div>
    <% } %>
    <% if (danger && danger.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= danger %>
        </div>
    <% } %>
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>
</div>